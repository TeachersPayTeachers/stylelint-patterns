{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "rules": {
    "comma-dangle": [2, "never"],
    "react/jsx-curly-spacing": [2, "always"],
    "no-unused-expressions": 0,
    "react/jsx-no-bind": 0,
    "no-param-reassign": 0,
    "space-before-function-paren": 0,
    "react/no-is-mounted": 0,
    "react/no-deprecated": 0,
    "no-underscore-dangle": 0,
    "import/no-extraneous-dependencies": 0,
    "import/named": 2,
    "import/prefer-default-export": 0,
    "no-unused-vars": [0, { "varsIgnorePattern": "_"}]
  },
  "globals": {
    "CONFIG": true,
    "NODE_ENV": true,
    "TPT_ENV": true,
    "IS_DEBUG": true,
    "IS_BROWSER": true,
    "IS_PRODUCTION": true,
    "IS_DEVELOPMENT": true,
    "IS_TEST": true,
    "IS_BETA": true,
    "PROJECT_ROOT": true,
    "META": true,
    "__TPT__": true
  },
  "env": {
    "jasmine": {
      "globals": {
        "describe": true,
        "it": true
      }
    }
  }
}
